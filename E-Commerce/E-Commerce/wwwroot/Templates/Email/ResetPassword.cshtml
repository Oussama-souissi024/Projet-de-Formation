@model string
<!DOCTYPE html>
<html>
<head>
    <style>
        .container { max-width: 600px; margin: 20px auto; padding: 30px; font-family: Arial; }
        .message { background: #f8f9fa; padding: 20px; border-radius: 5px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="message">
            <h2>Password Successfully Reset</h2>
            <p>Your password has been updated on @DateTime.Now.ToString("MMMM dd, yyyy HH:mm").</p>
            <p>If you didn't make this change, please contact our support team immediately.</p>
        </div>
    </div>
</body>
</html>