@model string
<!DOCTYPE html>
<html>
<head>
    <style>
        .container { max-width: 600px; margin: 20px auto; padding: 30px; font-family: Arial; }
        .button { background: #dc3545; color: white; padding: 12px 24px; border-radius: 5px; text-decoration: none; display: inline-block; }
        .note { color: #666; font-size: 0.9em; margin-top: 15px; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Password Reset Request</h2>
        <p>We received a request to reset your password. Click the button below to proceed:</p>
        <a href="@Model" class="button">Reset Password</a>
        <p class="note">This link will expire in 1 hour. If you didn't request this, please contact support.</p>
    </div>
</body>
</html>